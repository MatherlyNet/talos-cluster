#% if obot_enabled | default(false) and obot_monitoring_enabled | default(false) %#
---
#| ============================================================================= #|
#| SERVICEMONITOR - Prometheus scraping for Obot                                 #|
#| Exposes application metrics for observability                                 #|
#| NOTE: Obot metrics availability depends on the obot-entraid fork              #|
#| ============================================================================= #|
apiVersion: monitoring.coreos.com/v1
kind: ServiceMonitor
metadata:
  name: obot
  namespace: ai-system
  labels:
    app.kubernetes.io/name: obot
    #| Required for kube-prometheus-stack to discover ServiceMonitor #|
    release: kube-prometheus-stack
spec:
  selector:
    matchLabels:
      app.kubernetes.io/name: obot
  namespaceSelector:
    matchNames:
      - ai-system
  endpoints:
    - port: http
      path: /metrics
      interval: 30s
      scrapeTimeout: 10s
#% endif %#
