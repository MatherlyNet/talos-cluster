#% if network_policies_enabled | default(false) %#
#% set enforce = network_policies_mode | default('audit') == 'enforce' %#
---
#| Cloudflare Tunnel (cloudflared) network policy #|
apiVersion: cilium.io/v2
kind: CiliumNetworkPolicy
metadata:
  name: cloudflare-tunnel
  namespace: network
spec:
  description: "Cloudflare Tunnel: Establish tunnel to Cloudflare, forward to gateway"
  endpointSelector:
    matchLabels:
      app.kubernetes.io/name: cloudflare-tunnel
  enableDefaultDeny:
    egress: #{ enforce | lower }#
    ingress: #{ enforce | lower }#
  ingress:
#% if monitoring_enabled | default(false) %#
    #| Metrics scraping from Prometheus #|
    - fromEndpoints:
        - matchLabels:
            io.kubernetes.pod.namespace: monitoring
            app.kubernetes.io/name: prometheus
      toPorts:
        - ports:
            - port: "8080"
              protocol: TCP
#% endif %#
  egress:
    #| Establish tunnel to Cloudflare Edge #|
    - toEntities:
        - world
      toPorts:
        - ports:
            #| HTTPS for tunnel control plane #|
            - port: "443"
              protocol: TCP
            #| QUIC for tunnel data plane #|
            - port: "7844"
              protocol: UDP
    #| Forward traffic to Envoy Gateway (external) #|
    - toEndpoints:
        - matchLabels:
            gateway.networking.k8s.io/gateway-name: external
      toPorts:
        - ports:
            - port: "443"
              protocol: TCP
            - port: "80"
              protocol: TCP
    #| DNS resolution #|
    - toEndpoints:
        - matchLabels:
            io.kubernetes.pod.namespace: kube-system
            k8s-app: kube-dns
      toPorts:
        - ports:
            - port: "53"
              protocol: UDP
#% endif %#
