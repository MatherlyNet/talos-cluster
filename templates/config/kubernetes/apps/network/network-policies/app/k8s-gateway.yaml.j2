#% if network_policies_enabled | default(false) %#
#% set enforce = network_policies_mode | default('audit') == 'enforce' %#
---
#| k8s-gateway network policy: Internal DNS for services #|
apiVersion: cilium.io/v2
kind: CiliumNetworkPolicy
metadata:
  name: k8s-gateway
  namespace: network
spec:
  description: "k8s-gateway: Serve DNS for cluster services to internal network"
  endpointSelector:
    matchLabels:
      app.kubernetes.io/name: k8s-gateway
  enableDefaultDeny:
    egress: #{ enforce | lower }#
    ingress: #{ enforce | lower }#
  ingress:
    #| Accept DNS queries from internal network (via LoadBalancer) #|
    - fromEntities:
        - world
      toPorts:
        - ports:
            - port: "53"
              protocol: UDP
            - port: "53"
              protocol: TCP
#% if monitoring_enabled | default(false) %#
    #| Metrics scraping from Prometheus #|
    - fromEndpoints:
        - matchLabels:
            io.kubernetes.pod.namespace: monitoring
            app.kubernetes.io/name: prometheus
      toPorts:
        - ports:
            - port: "9153"
              protocol: TCP
#% endif %#
  egress:
    #| Access kube-apiserver for service discovery #|
    - toEntities:
        - kube-apiserver
      toPorts:
        - ports:
            - port: "6443"
              protocol: TCP
    #| DNS resolution (for upstream queries) #|
    - toEndpoints:
        - matchLabels:
            io.kubernetes.pod.namespace: kube-system
            k8s-app: kube-dns
      toPorts:
        - ports:
            - port: "53"
              protocol: UDP
#% endif %#
