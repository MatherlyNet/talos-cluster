---
apiVersion: helm.toolkit.fluxcd.io/v2
kind: HelmRelease
metadata:
  name: &app unifi-dns
spec:
  chartRef:
    kind: OCIRepository
    name: unifi-dns
  interval: 1h
  values:
    fullnameOverride: *app
    provider:
      name: webhook
      webhook:
        image:
          repository: ghcr.io/kashalls/external-dns-unifi-webhook
          tag: v0.8.1
        env:
          - name: UNIFI_HOST
            value: "#{ unifi_host }#"
          - name: UNIFI_SITE
            value: "#{ unifi_site | default('default') }#"
          - name: UNIFI_EXTERNAL_CONTROLLER
            value: "#{ unifi_external_controller | default(false) | string | lower }#"
          - name: UNIFI_SKIP_TLS_VERIFY
            value: "true"
          - name: UNIFI_API_KEY
            valueFrom:
              secretKeyRef:
                name: &secret unifi-dns-secret
                key: api-key
          - name: LOG_LEVEL
            value: "info"
        livenessProbe:
          httpGet:
            path: /healthz
            port: http-webhook
          initialDelaySeconds: 10
          timeoutSeconds: 5
        readinessProbe:
          httpGet:
            path: /readyz
            port: http-webhook
          initialDelaySeconds: 10
          timeoutSeconds: 5
    extraArgs:
      #| Only process gateway-httproute for envoy-internal #|
      #| DNSEndpoints should only be processed by cloudflare-dns #|
      - --gateway-name=envoy-internal
    triggerLoopOnEvent: true
    policy: sync
    #| Only gateway-httproute source - excludes DNSEndpoints (cloudflare-tunnel) #|
    sources: ["gateway-httproute"]
    txtPrefix: k8s.unifi.
    txtOwnerId: unifi
    domainFilters: ["${SECRET_DOMAIN}"]
    serviceMonitor:
      enabled: true
    podAnnotations:
      secret.reloader.stakater.com/reload: *secret
