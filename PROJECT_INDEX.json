      "name": "loki",
      "purpose": "Log aggregation",
      "conditional": "monitoring_enabled && loki_enabled"
    },
    {
      "namespace": "monitoring",
      "name": "alloy",
      "purpose": "Unified telemetry collector",
      "conditional": "monitoring_enabled && loki_enabled"
    },
    {
      "namespace": "monitoring",
      "name": "tempo",
      "purpose": "Distributed tracing",
      "conditional": "monitoring_enabled && tracing_enabled"
