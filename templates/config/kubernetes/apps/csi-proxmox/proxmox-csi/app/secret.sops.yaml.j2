#% if proxmox_csi_enabled is defined and proxmox_csi_enabled %#
---
apiVersion: v1
kind: Secret
metadata:
  name: proxmox-csi-config
type: Opaque
stringData:
  config.yaml: |
    clusters:
      - url: "#{ proxmox_endpoint }#/api2/json"
        insecure: false
        token_id: "#{ proxmox_csi_token_id }#"
        token_secret: "#{ proxmox_csi_token_secret }#"
        region: "#{ proxmox_region | default('pve') }#"
#% endif %#