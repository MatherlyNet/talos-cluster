{
  // Disable GitHub Actions variable lookups to prevent permission errors
  // on organization repos where OAuth lacks fine-grained variable access
  "github-actions.workflows.pinned.refresh.enabled": false,
  "editor.bracketPairColorization.enabled": true,
  "files.associations": {
    "**/*.json5": "json5"
  },
  "files.trimTrailingWhitespace": true,
  "sops.defaults.ageKeyFile": "age.key",
  "vs-kubernetes": {
    "vs-kubernetes.kubeconfig": "/Users/jason/dev/IaC/matherlynet-talos-cluster/kubeconfig",
    "vs-kubernetes.knownKubeconfigs": [
      "./kubeconfig"
    ]
  },
  "yaml.schemaStore.enable": true,
  "yaml.schemas": {
    "kubernetes": "./kubernetes/**/*.yaml",
    "./.taskfiles/template/resources/cluster.schema.json": [
      "cluster.yaml",
      "cluster.sample.yaml"
    ],
    "./.taskfiles/template/resources/nodes.schema.json": [
      "nodes.yaml",
      "nodes.sample.yaml"
    ]
  }
}