#% if hubble_enabled | default(false) %#
---
#| HTTPRoute for Hubble UI via envoy-internal (local network access) #|
#| Exposes Hubble network observability dashboard on hubble.{domain} #|
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: hubble-ui
spec:
  hostnames:
    - "#{ hubble_subdomain | default('hubble') }#.${SECRET_DOMAIN}"
  parentRefs:
    - name: envoy-internal
      namespace: network
      sectionName: https
  rules:
    - backendRefs:
        - name: hubble-ui
          port: 80
      matches:
        - path:
            type: PathPrefix
            value: /
#% endif %#
