#% if cnpg_enabled | default(false) and monitoring_enabled | default(false) %#
---
#| ServiceMonitor for CNPG operator metrics #|
#| Scrapes operator metrics from port 8080 #|
#| PostgreSQL cluster metrics use PodMonitor via Cluster CR #|
apiVersion: monitoring.coreos.com/v1
kind: ServiceMonitor
metadata:
  name: cloudnative-pg-operator
  labels:
    app.kubernetes.io/name: cloudnative-pg
    app.kubernetes.io/component: operator
spec:
  endpoints:
    - port: metrics
      interval: 30s
      scrapeTimeout: 10s
      path: /metrics
  namespaceSelector:
    matchNames:
      - cnpg-system
  selector:
    matchLabels:
      app.kubernetes.io/name: cloudnative-pg
#% endif %#
