#% if obot_enabled | default(false) %#
---
#| ============================================================================= #|
#| OBOT MCP NAMESPACE - Must exist before other resources                        #|
#| Creates dedicated namespace for MCP server pods with restricted PSS           #|
#| REF: docs/research/obot-mcp-gateway-integration-jan-2026.md                   #|
#| ============================================================================= #|
apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: obot-mcp-namespace
  namespace: flux-system
spec:
  interval: 1h
  path: ./kubernetes/apps/ai-system/obot/mcp-namespace/app
  prune: false
  sourceRef:
    kind: GitRepository
    name: flux-system
    namespace: flux-system
  wait: true
---
#| ============================================================================= #|
#| OBOT FLUX KUSTOMIZATION                                                        #|
#| Main Obot deployment with Keycloak auth, CNPG database, and MCP runtime        #|
#| Uses jrmatherly/obot-entraid fork for Keycloak authentication provider         #|
#| REF: docs/research/obot-mcp-gateway-integration-jan-2026.md                   #|
#| ============================================================================= #|
apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: &app obot
  namespace: flux-system
spec:
  targetNamespace: ai-system
  commonMetadata:
    labels:
      app.kubernetes.io/name: *app
  dependsOn:
    #| Core infrastructure dependencies #|
    - name: coredns
      namespace: kube-system
    - name: cloudnative-pg
      namespace: cnpg-system
    - name: cert-manager
      namespace: cert-manager
    #| MCP namespace must exist first #|
    - name: obot-mcp-namespace
#% if obot_keycloak_enabled | default(false) %#
    #| Keycloak for SSO authentication #|
    - name: keycloak
      namespace: identity
#% endif %#
#% if obot_backup_enabled | default(false) %#
    #| RustFS for PostgreSQL backups #|
    - name: rustfs
      namespace: storage
#% endif %#
  healthChecks:
    - apiVersion: apps/v1
      kind: Deployment
      name: obot
      namespace: ai-system
  interval: 1h
  retryInterval: 30s
  path: ./kubernetes/apps/ai-system/obot/app
  postBuild:
    substituteFrom:
      - name: cluster-secrets
        kind: Secret
  prune: true
  sourceRef:
    kind: GitRepository
    name: flux-system
    namespace: flux-system
  timeout: 15m
  wait: true
---
#| ============================================================================= #|
#| OBOT MCP POLICIES - Resource quotas and network policies for MCP namespace   #|
#| Applied after main Obot deployment is ready                                   #|
#| REF: docs/research/obot-mcp-gateway-integration-jan-2026.md                   #|
#| ============================================================================= #|
apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: obot-mcp-policies
  namespace: flux-system
spec:
  dependsOn:
    - name: obot
    - name: obot-mcp-namespace
  interval: 1h
  path: ./kubernetes/apps/ai-system/obot/mcp-policies/app
  prune: true
  sourceRef:
    kind: GitRepository
    name: flux-system
    namespace: flux-system
  targetNamespace: #{ obot_mcp_namespace | default('obot-mcp') }#
  wait: false
#% endif %#
