#% if keycloak_enabled | default(false) %#
---
#| First Kustomization: Operator + CRDs (must be healthy before CRs can be created) #|
#| CRD split pattern: Operator installs CRDs and waits for health, then instance Kustomization creates Keycloak CR #|
apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: keycloak-operator
spec:
  dependsOn:
    - name: coredns
      namespace: kube-system
  healthChecks:
    - apiVersion: apps/v1
      kind: Deployment
      name: keycloak-operator
      namespace: identity
  interval: 1h
  retryInterval: 30s
  path: ./kubernetes/apps/identity/keycloak/operator
  postBuild:
    substituteFrom:
      - name: cluster-secrets
        kind: Secret
  prune: true
  sourceRef:
    kind: GitRepository
    name: flux-system
    namespace: flux-system
  targetNamespace: identity
  timeout: 10m
  wait: true
---
#| Second Kustomization: Keycloak CR + HTTPRoute (depends on operator being ready) #|
apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: keycloak
spec:
  dependsOn:
    - name: keycloak-operator
    - name: cert-manager
      namespace: cert-manager
#% if (keycloak_db_mode | default('embedded')) == 'embedded' %#
    #| Embedded PostgreSQL has no external dependencies #|
#% else %#
    #| CNPG mode requires CloudNativePG operator #|
    - name: cloudnative-pg
      namespace: cnpg-system
#% endif %#
  healthChecks:
    - apiVersion: k8s.keycloak.org/v2alpha1
      kind: Keycloak
      name: keycloak
      namespace: identity
  interval: 1h
  retryInterval: 30s
  path: ./kubernetes/apps/identity/keycloak/app
  postBuild:
    substituteFrom:
      - name: cluster-secrets
        kind: Secret
  prune: true
  sourceRef:
    kind: GitRepository
    name: flux-system
    namespace: flux-system
  targetNamespace: identity
  timeout: 15m
  wait: true
---
#| ============================================================================= #|
#| Third Kustomization: Realm Configuration via keycloak-config-cli             #|
#| Runs AFTER Keycloak is healthy; applies realm configuration via Admin API    #|
#| Uses keycloak-config-cli for incremental updates (unlike KeycloakRealmImport #|
#| which only supports one-time imports)                                         #|
#| REF: docs/research/keycloak-configuration-as-code-gitops-jan-2026.md          #|
#| ============================================================================= #|
apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: keycloak-config
spec:
  dependsOn:
    - name: keycloak
  #| No healthChecks - Job is fire-and-forget #|
  interval: 1h
  retryInterval: 30s
  path: ./kubernetes/apps/identity/keycloak/config
  postBuild:
    substituteFrom:
      - name: cluster-secrets
        kind: Secret
  prune: true
  sourceRef:
    kind: GitRepository
    name: flux-system
    namespace: flux-system
  targetNamespace: identity
  timeout: 10m
  #| wait: false - don't block on Job completion #|
  #| Job runs once and exits; blocking would delay entire Flux reconciliation #|
  #| Job failures are handled via backoffLimit and alerting (if configured) #|
  wait: false
#% endif %#