#% if monitoring_enabled | default(false) and tracing_enabled | default(false) %#
---
apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: tempo
spec:
  dependsOn:
    - name: victoria-metrics
#% if loki_enabled | default(false) %#
    - name: alloy
#% endif %#
  healthChecks:
    - apiVersion: helm.toolkit.fluxcd.io/v2
      kind: HelmRelease
      name: tempo
      namespace: monitoring
  interval: 1h
  retryInterval: 30s
  path: ./kubernetes/apps/monitoring/tempo/app
  postBuild:
    substituteFrom:
      - name: cluster-secrets
        kind: Secret
  prune: true
  sourceRef:
    kind: GitRepository
    name: flux-system
    namespace: flux-system
  targetNamespace: monitoring
  timeout: 10m
  wait: true
#% endif %#