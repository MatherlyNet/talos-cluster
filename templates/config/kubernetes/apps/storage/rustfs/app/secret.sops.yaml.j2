#% if rustfs_enabled | default(false) %#
---
apiVersion: v1
kind: Secret
metadata:
  name: rustfs-credentials
type: Opaque
stringData:
  #| RustFS Helm chart expects 'access_key' and 'secret_key' keys (NOT RUSTFS_ prefix) #|
  #| The chart maps these to RUSTFS_ACCESS_KEY and RUSTFS_SECRET_KEY env vars internally #|
  #| REF: https://github.com/rustfs/rustfs/blob/main/helm/README.md #|
  access_key: "#{ rustfs_access_key | default('rustfsadmin') }#"
  secret_key: "#{ rustfs_secret_key }#"
#% endif %#