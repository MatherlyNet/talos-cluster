#% if rustfs_enabled | default(false) %#
---
apiVersion: helm.toolkit.fluxcd.io/v2
kind: HelmRelease
metadata:
  name: rustfs
spec:
  chart:
    spec:
      chart: rustfs
      version: "0.0.78"
      sourceRef:
        kind: HelmRepository
        name: rustfs
        namespace: storage
  interval: 1h
  install:
    crds: CreateReplace
  upgrade:
    crds: CreateReplace
    cleanupOnFail: true
    remediation:
      retries: 2
  values:
    #| Mode selection: standalone for 1 replica, distributed for 4/16 replicas #|
    #| Helm chart only creates data PVCs for 1 (standalone), 4, or 16 (distributed) replicas #|
    mode:
      standalone:
        enabled: #{ 'true' if (rustfs_replicas | default(1) | int) == 1 else 'false' }#
      distributed:
        enabled: #{ 'true' if (rustfs_replicas | default(1) | int) in [4, 16] else 'false' }#

    #| Number of RustFS nodes - use 1 for standalone, 4/16 for distributed #|
    replicaCount: #{ rustfs_replicas | default(1) }#

    #| Container image #|
    image:
      repository: rustfs/rustfs
      tag: "latest"
      pullPolicy: IfNotPresent

    #| Resource limits #|
    resources:
      requests:
        cpu: 100m
        memory: 512Mi
      limits:
        memory: 1Gi

    #| StorageClass configuration - uses storageclass.name per RustFS Helm chart #|
    storageclass:
      name: "#{ rustfs_storage_class | default(storage_class) | default('local-path') }#"
      dataStorageSize: "#{ rustfs_data_volume_size | default('20Gi') }#"
      logStorageSize: "#{ rustfs_log_volume_size | default('1Gi') }#"

    #| RustFS configuration - converted to RUSTFS_* env vars via ConfigMap #|
    #| REF: https://charts.rustfs.com/ #|
    config:
      rustfs:
        #| Buffer profile for workload optimization #|
        buffer_profile: "#{ rustfs_buffer_profile | default('DataAnalytics') }#"
        #| Enable background scanner for data integrity #|
        enable_scanner: "true"
        #| Enable self-healing for corrupted data #|
        enable_heal: "true"
        #| Console UI always enabled for access key management (RustFS doesn't support mc admin) #|
        console_enable: "true"
#% if rustfs_monitoring_enabled | default(false) %#
        #| OTLP metrics export to Alloy - RustFS uses push-mode OpenTelemetry #|
        #| RustFS does NOT support Prometheus pull-based metrics like MinIO #|
        #| REF: https://github.com/rustfs/rustfs/issues/1228 #|
        obs_metric_endpoint: "http://alloy.monitoring.svc:4318/v1/metrics"
#% endif %#

    #| Use existing secret for credentials - must be under 'secret' key per RustFS Helm chart #|
    #| REF: https://github.com/rustfs/rustfs/blob/main/helm/README.md #|
    secret:
      existingSecret: rustfs-credentials

    #| Service configuration #|
    service:
      type: ClusterIP
      port: 9000
      consolePort: 9001

    #| Ingress disabled - internal service only #|
    ingress:
      enabled: false

    #| Pod security context #|
    podSecurityContext:
      runAsUser: 10001
      runAsGroup: 10001
      fsGroup: 10001

    #| Container security context #|
    containerSecurityContext:
      allowPrivilegeEscalation: false
      capabilities:
        drop:
          - ALL
      readOnlyRootFilesystem: false
      seccompProfile:
        type: RuntimeDefault

    #| Pod anti-affinity for HA #|
    affinity:
      podAntiAffinity:
        preferredDuringSchedulingIgnoredDuringExecution:
          - weight: 100
            podAffinityTerm:
              labelSelector:
                matchExpressions:
                  - key: app.kubernetes.io/name
                    operator: In
                    values:
                      - rustfs
              topologyKey: kubernetes.io/hostname

    #| Liveness and readiness probes - RustFS uses /health, not MinIO endpoints #|
    livenessProbe:
      httpGet:
        path: /health
        port: 9000
      initialDelaySeconds: 30
      periodSeconds: 10
      timeoutSeconds: 5
    readinessProbe:
      httpGet:
        path: /health
        port: 9000
      initialDelaySeconds: 5
      periodSeconds: 5
      timeoutSeconds: 3
#% endif %#