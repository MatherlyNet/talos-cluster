#% if langfuse_scim_sync_enabled | default(false) %#
#| =========================================================================== #|
#| Langfuse Role Sync Credentials (SOPS-encrypted)                             #|
#| Contains Keycloak service account and Langfuse API credentials              #|
#| REF: docs/research/langfuse-scim-role-sync-implementation-jan-2026.md       #|
#| =========================================================================== #|
---
apiVersion: v1
kind: Secret
metadata:
  name: langfuse-sync-secret
  labels:
    app.kubernetes.io/name: langfuse-role-sync
    app.kubernetes.io/component: sync
    app.kubernetes.io/part-of: langfuse
type: Opaque
stringData:
  #| Keycloak service account client secret for Admin API access #|
  KEYCLOAK_CLIENT_SECRET: "#{ langfuse_sync_keycloak_client_secret }#"
  #| Langfuse Organization API Key (public key) - created via Langfuse UI #|
  LANGFUSE_PUBLIC_KEY: "#{ langfuse_scim_public_key }#"
  #| Langfuse Organization API Key (secret key) - created via Langfuse UI #|
  LANGFUSE_SECRET_KEY: "#{ langfuse_scim_secret_key }#"
#% endif %#
