#% if keycloak_enabled | default(false) and (keycloak_db_mode | default('embedded')) == 'cnpg' %#
---
#| ============================================================================= #|
#| CLOUDNATIVEPG POSTGRESQL CLUSTER - Production Database for Keycloak          #|
#| REF: https://cloudnative-pg.io/documentation/                                 #|
#| ============================================================================= #|
#| Requires: cnpg_enabled: true (CloudNativePG operator deployed)                #|
#| ============================================================================= #|
apiVersion: postgresql.cnpg.io/v1
kind: Cluster
metadata:
  name: keycloak-postgres
  namespace: identity
  labels:
    app.kubernetes.io/name: keycloak-postgres
    app.kubernetes.io/part-of: keycloak
spec:
  #| Number of PostgreSQL instances (1 for dev, 3+ for HA) #|
  instances: #{ keycloak_db_instances | default(1) }#

  #| PostgreSQL image - standard/minimal images work with Barman Cloud Plugin #|
  #| Plugin provides barman-cloud binaries via sidecar container               #|
  #| REF: https://cloudnative-pg.io/plugin-barman-cloud/docs/                  #|
  imageName: #{ cnpg_postgres_image | default('ghcr.io/cloudnative-pg/postgresql:18.1-standard-trixie') }#

  #| Bootstrap from initdb (fresh database) #|
  bootstrap:
    initdb:
      database: #{ keycloak_db_name | default('keycloak') }#
      owner: #{ keycloak_db_user | default('keycloak') }#
      secret:
        name: keycloak-db-secret

  #| =========================================================================== #|
  #| MANAGED ROLES - Declarative role management with password auto-rotation     #|
  #| CNPG syncs password changes from secret when cnpg.io/reload: "true" label   #|
  #| REF: https://cloudnative-pg.io/documentation/current/declarative_role_management/ #|
  #| REF: docs/research/cnpg-managed-roles-password-rotation-jan-2026.md         #|
  #| =========================================================================== #|
  managed:
    roles:
      - name: #{ keycloak_db_user | default('keycloak') }#
        ensure: present
        login: true
        createdb: false
        createrole: false
        inherit: true
        connectionLimit: -1
        passwordSecret:
          name: keycloak-db-secret

  #| Storage configuration #|
  storage:
    size: #{ keycloak_storage_size | default('10Gi') }#
    storageClass: #{ cnpg_storage_class | default(storage_class) | default('local-path') }#

  #| Resource limits #|
  resources:
    requests:
      memory: 512Mi
      cpu: 250m
    limits:
      memory: 1Gi
      cpu: 1000m

  #| Monitoring (if prometheus-stack enabled) #|
  monitoring:
    enablePodMonitor: #{ 'true' if monitoring_enabled | default(false) else 'false' }#

  #| PostgreSQL configuration optimized for Keycloak #|
  postgresql:
    parameters:
      max_connections: "100"
      shared_buffers: "256MB"
      effective_cache_size: "512MB"
      work_mem: "4MB"
      maintenance_work_mem: "64MB"
      checkpoint_completion_target: "0.9"
      wal_buffers: "8MB"
      random_page_cost: "1.1"
      effective_io_concurrency: "200"
      min_wal_size: "256MB"
      max_wal_size: "1GB"
#% if cnpg_pgvector_enabled | default(false) %#
    #| pgvector extension via ImageVolume (K8s 1.35+, PostgreSQL 18+) #|
    #| REF: https://cloudnative-pg.io/documentation/current/imagevolume_extensions/ #|
    extensions:
      - name: pgvector
        image:
          reference: #{ cnpg_pgvector_image | default('ghcr.io/cloudnative-pg/pgvector:0.8.1-18-trixie') }#
#% endif %#

  #| Affinity rules for HA deployments #|
#% if (keycloak_db_instances | default(1)) > 1 %#
  affinity:
    enablePodAntiAffinity: true
    topologyKey: kubernetes.io/hostname
#% endif %#

  #| Priority class for critical database workload #|
  priorityClassName: #{ cnpg_priority_class | default('system-cluster-critical') }#

#% if keycloak_backup_enabled | default(false) and cnpg_barman_plugin_enabled | default(false) %#
  #| =========================================================================== #|
  #| BARMAN CLOUD PLUGIN - Backup via external plugin to RustFS S3              #|
  #| References ObjectStore CRD for backup destination configuration            #|
  #| REF: https://cloudnative-pg.io/plugin-barman-cloud/docs/usage/             #|
  #| =========================================================================== #|
  plugins:
    - name: barman-cloud.cloudnative-pg.io
      isWALArchiver: true
      parameters:
        barmanObjectName: keycloak-objectstore
#% endif %#
#% if keycloak_backup_enabled | default(false) and cnpg_barman_plugin_enabled | default(false) %#
---
#| =========================================================================== #|
#| OBJECTSTORE - Barman Cloud Plugin backup destination for Keycloak           #|
#| Configures S3 credentials, WAL compression, and retention policy            #|
#| REF: https://cloudnative-pg.io/plugin-barman-cloud/docs/usage/              #|
#| =========================================================================== #|
apiVersion: barmancloud.cnpg.io/v1
kind: ObjectStore
metadata:
  name: keycloak-objectstore
  namespace: identity
  labels:
    app.kubernetes.io/name: keycloak-objectstore
    app.kubernetes.io/part-of: keycloak
spec:
  configuration:
    destinationPath: "s3://keycloak-backups"
    endpointURL: "http://rustfs-svc.storage.svc.cluster.local:9000"
    s3Credentials:
      accessKeyId:
        name: keycloak-backup-credentials
        key: ACCESS_KEY_ID
      secretAccessKey:
        name: keycloak-backup-credentials
        key: SECRET_ACCESS_KEY
    wal:
      compression: gzip
    retentionPolicy: "#{ keycloak_backup_retention | default('7d') }#"
  instanceSidecarConfiguration:
    #| boto3 1.36+ S3 Data Integrity Protection workaround for RustFS/S3-compatible storage #|
    #| REF: https://cloudnative-pg.io/plugin-barman-cloud/docs/next/object_stores/ #|
    #| REF: docs/research/barman-cloud-plugin-wal-archive-remediation-jan-2026.md #|
    env:
      - name: AWS_REQUEST_CHECKSUM_CALCULATION
        value: when_required
      - name: AWS_RESPONSE_CHECKSUM_VALIDATION
        value: when_required
    logLevel: info
    retentionPolicyIntervalSeconds: 1800
    resources:
      requests:
        cpu: 50m
        memory: 64Mi
      limits:
        cpu: 200m
        memory: 256Mi
#% endif %#
#% endif %#
