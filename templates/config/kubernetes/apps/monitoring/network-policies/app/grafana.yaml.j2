#% if network_policies_enabled | default(false) and monitoring_enabled | default(false) %#
#% set enforce = network_policies_mode | default('audit') == 'enforce' %#
---
#| Grafana network policy: Dashboards and visualization #|
apiVersion: cilium.io/v2
kind: CiliumNetworkPolicy
metadata:
  name: grafana
  namespace: monitoring
spec:
  description: "Grafana: Serve dashboards, query data sources"
  endpointSelector:
    matchLabels:
      app.kubernetes.io/name: grafana
  enableDefaultDeny:
    egress: #{ enforce | lower }#
    ingress: #{ enforce | lower }#
  ingress:
    #| User access via envoy gateway (internal) #|
    - fromEndpoints:
        - matchLabels:
            io.kubernetes.pod.namespace: network
            gateway.networking.k8s.io/gateway-name: internal
      toPorts:
        - ports:
            - port: "3000"
              protocol: TCP
    #| User access via envoy gateway (external via Cloudflare Tunnel) #|
    - fromEndpoints:
        - matchLabels:
            io.kubernetes.pod.namespace: network
            gateway.networking.k8s.io/gateway-name: external
      toPorts:
        - ports:
            - port: "3000"
              protocol: TCP
  egress:
    #| Query Prometheus for metrics #|
    - toEndpoints:
        - matchLabels:
            app.kubernetes.io/name: prometheus
      toPorts:
        - ports:
            - port: "9090"
              protocol: TCP
#% if loki_enabled | default(false) %#
    #| Query Loki for logs #|
    - toEndpoints:
        - matchLabels:
            app.kubernetes.io/name: loki
      toPorts:
        - ports:
            - port: "3100"
              protocol: TCP
#% endif %#
#% if tracing_enabled | default(false) %#
    #| Query Tempo for traces #|
    - toEndpoints:
        - matchLabels:
            app.kubernetes.io/name: tempo
      toPorts:
        - ports:
            - port: "3200"
              protocol: TCP
#% endif %#
    #| DNS resolution #|
    - toEndpoints:
        - matchLabels:
            io.kubernetes.pod.namespace: kube-system
            k8s-app: kube-dns
      toPorts:
        - ports:
            - port: "53"
              protocol: UDP
#% endif %#
