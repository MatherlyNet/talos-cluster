#% if network_policies_enabled | default(false) %#
#% set enforce = network_policies_mode | default('audit') == 'enforce' %#
---
#| external-dns (Cloudflare) network policy #|
apiVersion: cilium.io/v2
kind: CiliumNetworkPolicy
metadata:
  name: cloudflare-dns
  namespace: network
spec:
  description: "external-dns: Sync DNS records to Cloudflare"
  endpointSelector:
    matchLabels:
      app.kubernetes.io/name: external-dns
      app.kubernetes.io/instance: cloudflare-dns
  enableDefaultDeny:
    egress: #{ enforce | lower }#
    ingress: #{ enforce | lower }#
  ingress:
#% if monitoring_enabled | default(false) %#
    #| Metrics scraping #|
    - fromEndpoints:
        - matchLabels:
            io.kubernetes.pod.namespace: monitoring
            app.kubernetes.io/name: vmagent
      toPorts:
        - ports:
            - port: "7979"
              protocol: TCP
#% endif %#
  egress:
    #| Access Cloudflare API #|
    - toEntities:
        - world
      toPorts:
        - ports:
            - port: "443"
              protocol: TCP
    #| Access kube-apiserver for service/ingress discovery #|
    - toEntities:
        - kube-apiserver
      toPorts:
        - ports:
            - port: "6443"
              protocol: TCP
    #| DNS resolution #|
    - toEndpoints:
        - matchLabels:
            io.kubernetes.pod.namespace: kube-system
            k8s-app: kube-dns
      toPorts:
        - ports:
            - port: "53"
              protocol: UDP
#% endif %#
