#| =============================================================================
   Cilium Network Configuration
   - LoadBalancer IP Pool: Allocates IPs for LoadBalancer services
   - L2 Announcements: ARP/NDP announcements for single-VLAN environments
   - BGP Control Plane v2: Dynamic routing for multi-VLAN environments (optional)
   =============================================================================
#|
---
apiVersion: cilium.io/v2
kind: CiliumLoadBalancerIPPool
metadata:
  name: pool
spec:
  allowFirstLastIPs: "No"
  blocks:
    #% if cilium_lb_pool_cidr is defined %#
    #| Dedicated LoadBalancer IP pool (separate from node network) #|
    - cidr: "#{ cilium_lb_pool_cidr }#"
    #% else %#
    #| Use node network for LoadBalancer IPs (default) #|
    - cidr: "#{ node_cidr }#"
    #% endif %#
#% if not cilium_bgp_enabled %#
---
#| L2 Announcements - Used when BGP is not enabled #|
apiVersion: cilium.io/v2
kind: CiliumL2AnnouncementPolicy
metadata:
  name: l2-policy
spec:
  loadBalancerIPs: true
  #| NOTE: interfaces might need to be set if you have more than one active NIC on your hosts #|
  # interfaces:
  #   - ^eno[0-9]+
  #   - ^eth[0-9]+
  nodeSelector:
    matchLabels:
      kubernetes.io/os: linux
#% endif %#
#% if cilium_bgp_enabled %#
#| =============================================================================
   BGP Control Plane v2 Configuration
   Enables dynamic routing between Kubernetes and external BGP peers (e.g., UniFi)
   REF: https://docs.cilium.io/en/stable/network/bgp-control-plane/bgp-control-plane-v2/
   =============================================================================
#|
---
apiVersion: cilium.io/v2
kind: CiliumBGPAdvertisement
metadata:
  name: bgp-advertisement-config
  labels:
    advertise: bgp
spec:
  advertisements:
    - advertisementType: Service
      service:
        addresses:
          - LoadBalancerIP
      #| Match all services - use a selector that always matches #|
      selector:
        matchExpressions:
          - { key: somekey, operator: NotIn, values: ["never-used-value"] }
---
apiVersion: cilium.io/v2
kind: CiliumBGPPeerConfig
metadata:
  name: bgp-peer-config-v4
spec:
  #% if cilium_bgp_password is defined %#
  #| TCP MD5 authentication (RFC 2385) - must match UniFi FRR password #|
  authSecretRef: bgp-peer-password
  #% endif %#
  #| BGP Timers - defaults tuned for faster failure detection (~9s vs ~90s) #|
  #| Minimum: holdTimeSeconds=3, keepAliveTimeSeconds=1 #|
  holdTimeSeconds: #{ cilium_bgp_hold_time | default(30) }#
  keepAliveTimeSeconds: #{ cilium_bgp_keepalive_time | default(10) }#
  #% if cilium_bgp_graceful_restart | default(false) %#
  #| Graceful Restart - smoother failover during Cilium restarts #|
  gracefulRestart:
    enabled: true
    restartTimeSeconds: #{ cilium_bgp_graceful_restart_time | default(120) }#
  #% endif %#
  families:
    - afi: ipv4
      safi: unicast
      advertisements:
        matchLabels:
          advertise: bgp
---
apiVersion: cilium.io/v2
kind: CiliumBGPClusterConfig
metadata:
  name: bgp-cluster-config
spec:
  nodeSelector:
    matchLabels:
      kubernetes.io/os: linux
  bgpInstances:
    - name: instance-#{ cilium_bgp_node_asn }#
      localASN: #{ cilium_bgp_node_asn }#
      peers:
        - name: peer-#{ cilium_bgp_router_asn }#-v4
          peerASN: #{ cilium_bgp_router_asn }#
          peerAddress: #{ cilium_bgp_router_addr }#
          peerConfigRef:
            name: bgp-peer-config-v4
#% endif %#
