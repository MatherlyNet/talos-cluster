#% if obot_enabled | default(false) %#
---
#| ============================================================================= #|
#| CLOUDNATIVEPG POSTGRESQL CLUSTER - Database for Obot                          #|
#| Stores agents, threads, tools, credentials, and audit logs                    #|
#| Requires pgvector extension for semantic search/embeddings                    #|
#| REF: https://cloudnative-pg.io/documentation/                                  #|
#| REF: docs/research/obot-mcp-gateway-integration-jan-2026.md                   #|
#| ============================================================================= #|
apiVersion: postgresql.cnpg.io/v1
kind: Cluster
metadata:
  name: obot-postgresql
  namespace: ai-system
  labels:
    app.kubernetes.io/name: obot-postgresql
    app.kubernetes.io/part-of: obot
#% if network_policies_enabled | default(false) %#
    #| Network policy labels for CiliumNetworkPolicy tiered policies #|
    network.cilium.io/api-access: "true"
#% endif %#
spec:
  #| Number of PostgreSQL instances (1 for dev, 3+ for HA) #|
  instances: #{ obot_postgresql_replicas | default(1) }#

  #| PostgreSQL image - standard/minimal images work with Barman Cloud Plugin #|
  #| Plugin provides barman-cloud binaries via sidecar container               #|
  #| REF: https://cloudnative-pg.io/plugin-barman-cloud/docs/                  #|
  imageName: #{ cnpg_postgres_image | default('ghcr.io/cloudnative-pg/postgresql:18.1-standard-trixie') }#

  #| Bootstrap from initdb (fresh database) #|
  bootstrap:
    initdb:
      database: #{ obot_postgres_db | default('obot') }#
      owner: #{ obot_postgres_user | default('obot') }#
      secret:
        name: obot-db-secret

  #| =========================================================================== #|
  #| MANAGED ROLES - Declarative role management with password auto-rotation     #|
  #| CNPG syncs password changes from secret when cnpg.io/reload: "true" label   #|
  #| REF: https://cloudnative-pg.io/documentation/current/declarative_role_management/ #|
  #| REF: docs/research/cnpg-managed-roles-password-rotation-jan-2026.md         #|
  #| =========================================================================== #|
  managed:
    roles:
      - name: #{ obot_postgres_user | default('obot') }#
        ensure: present
        login: true
        createdb: false
        createrole: false
        inherit: true
        connectionLimit: -1
        passwordSecret:
          name: obot-db-secret

  #| Storage configuration #|
  storage:
    size: #{ obot_postgresql_storage_size | default('10Gi') }#
    storageClass: #{ cnpg_storage_class | default(storage_class) | default('local-path') }#

  #| Resource limits #|
  resources:
    requests:
      memory: 512Mi
      cpu: 200m
    limits:
      memory: 2Gi
      cpu: 1000m

  #| Monitoring (if prometheus-stack enabled) #|
  monitoring:
    enablePodMonitor: #{ 'true' if monitoring_enabled | default(false) else 'false' }#

  #| PostgreSQL configuration optimized for Obot #|
  postgresql:
    parameters:
      max_connections: "200"
      shared_buffers: "256MB"
      effective_cache_size: "1GB"
      maintenance_work_mem: "64MB"
      checkpoint_completion_target: "0.9"
      wal_buffers: "16MB"
      default_statistics_target: "100"
      random_page_cost: "1.1"
      effective_io_concurrency: "200"
      work_mem: "5242kB"
#% if cnpg_pgvector_enabled | default(false) %#
    #| pgvector extension via ImageVolume (K8s 1.35+, PostgreSQL 18+) #|
    #| Required for semantic search and RAG capabilities in Obot      #|
    #| REF: https://cloudnative-pg.io/documentation/current/imagevolume_extensions/ #|
    extensions:
      - name: pgvector
        image:
          reference: #{ cnpg_pgvector_image | default('ghcr.io/cloudnative-pg/pgvector:0.8.1-18-trixie') }#
#% endif %#

  #| Affinity rules for HA deployments #|
#% if (obot_postgresql_replicas | default(1)) > 1 %#
  affinity:
    enablePodAntiAffinity: true
    topologyKey: kubernetes.io/hostname
#% endif %#

  #| Priority class for critical database workload #|
  priorityClassName: #{ cnpg_priority_class | default('system-cluster-critical') }#

#% if obot_backup_enabled | default(false) and cnpg_barman_plugin_enabled | default(false) %#
  #| =========================================================================== #|
  #| BARMAN CLOUD PLUGIN - Backup via external plugin to RustFS S3              #|
  #| References ObjectStore CRD for backup destination configuration            #|
  #| REF: https://cloudnative-pg.io/plugin-barman-cloud/docs/usage/             #|
  #| =========================================================================== #|
  plugins:
    - name: barman-cloud.cloudnative-pg.io
      isWALArchiver: true
      parameters:
        barmanObjectName: obot-objectstore
#% endif %#
---
#| =========================================================================== #|
#| Database resource to declaratively manage obot database                      #|
#| Enables pgvector extension for semantic search/embeddings if enabled         #|
#| =========================================================================== #|
apiVersion: postgresql.cnpg.io/v1
kind: Database
metadata:
  name: obot-db-obot
  namespace: ai-system
spec:
  name: obot
  owner: obot
  cluster:
    name: obot-postgresql
#% if cnpg_pgvector_enabled | default(false) %#
  extensions:
    - name: vector
#% endif %#
#% if obot_backup_enabled | default(false) and cnpg_barman_plugin_enabled | default(false) %#
---
#| =========================================================================== #|
#| OBJECTSTORE - Barman Cloud Plugin backup destination for Obot               #|
#| Configures S3 credentials, WAL compression, and retention policy            #|
#| REF: https://cloudnative-pg.io/plugin-barman-cloud/docs/usage/              #|
#| =========================================================================== #|
apiVersion: barmancloud.cnpg.io/v1
kind: ObjectStore
metadata:
  name: obot-objectstore
  namespace: ai-system
  labels:
    app.kubernetes.io/name: obot-objectstore
    app.kubernetes.io/part-of: obot
spec:
  configuration:
    destinationPath: "s3://obot-postgres-backups"
    endpointURL: "http://rustfs-svc.storage.svc.cluster.local:9000"
    s3Credentials:
      accessKeyId:
        name: obot-backup-credentials
        key: ACCESS_KEY_ID
      secretAccessKey:
        name: obot-backup-credentials
        key: SECRET_ACCESS_KEY
    wal:
      compression: gzip
    retentionPolicy: "#{ obot_backup_retention | default('7d') }#"
  instanceSidecarConfiguration:
    #| boto3 1.36+ S3 Data Integrity Protection workaround for RustFS/S3-compatible storage #|
    #| REF: https://cloudnative-pg.io/plugin-barman-cloud/docs/next/object_stores/ #|
    #| REF: docs/research/barman-cloud-plugin-wal-archive-remediation-jan-2026.md #|
    env:
      - name: AWS_REQUEST_CHECKSUM_CALCULATION
        value: when_required
      - name: AWS_RESPONSE_CHECKSUM_VALIDATION
        value: when_required
    logLevel: info
    retentionPolicyIntervalSeconds: 1800
    resources:
      requests:
        cpu: 50m
        memory: 64Mi
      limits:
        cpu: 200m
        memory: 256Mi
#% endif %#
#% endif %#
