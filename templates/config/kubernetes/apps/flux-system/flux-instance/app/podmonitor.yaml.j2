#% if monitoring_enabled | default(false) %#
#| Flux Controllers metrics (source, kustomize, helm, notification controllers) #|
#| Scrapes gotk_* metrics for Flux2 Grafana dashboard (gnetId 16714) #|
---
apiVersion: monitoring.coreos.com/v1
kind: PodMonitor
metadata:
  name: flux-controllers
spec:
  jobLabel: flux-controllers
  namespaceSelector:
    matchNames:
      - flux-system
  podMetricsEndpoints:
    - port: http-prom
      path: /metrics
      honorLabels: true
  selector:
    matchLabels:
      app.kubernetes.io/part-of: flux
#% endif %#
