#% if headlamp_enabled | default(false) %#
---
#| ============================================================================= #|
#| HEADLAMP SECRET - OIDC Authentication Credentials                             #|
#| SOPS-encrypted secret containing OIDC client credentials                     #|
#| ============================================================================= #|
apiVersion: v1
kind: Secret
metadata:
  name: headlamp-secret
  namespace: kube-system
type: Opaque
stringData:
  #| OIDC Client Secret - Generated in Keycloak or with openssl rand -hex 32 #|
  oidc-client-secret: "#{ headlamp_oidc_client_secret }#"
#% if headlamp_ai_assistant_enabled | default(false) %#
  #| AI Assistant API Key - For LiteLLM proxy authentication #|
  ai-assistant-api-key: "#{ headlamp_ai_assistant_api_key }#"
#% endif %#
#% endif %#
