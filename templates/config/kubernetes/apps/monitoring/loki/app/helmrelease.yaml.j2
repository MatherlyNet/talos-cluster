#% if monitoring_enabled | default(false) and loki_enabled | default(false) %#
---
# CRITICAL COHESION: Grafana is disabled here - it's deployed by kube-prometheus-stack only.
apiVersion: helm.toolkit.fluxcd.io/v2
kind: HelmRelease
metadata:
  name: loki
spec:
  chartRef:
    kind: OCIRepository
    name: loki
  interval: 1h
#% if rustfs_enabled | default(false) %#
  #| Depend on RustFS for S3 storage #|
  dependsOn:
    - name: rustfs
      namespace: storage
#% endif %#
  values:
#% if rustfs_enabled | default(false) %#
    #| SimpleScalable mode with RustFS S3 backend #|
    deploymentMode: SimpleScalable

    #| Read path - handles queries #|
    read:
      replicas: 2
      extraEnvFrom:
        - secretRef:
            name: loki-s3-credentials
      resources:
        requests:
          cpu: 50m
          memory: 128Mi
        limits:
          memory: 256Mi

    #| Write path - handles ingestion #|
    write:
      replicas: 2
      extraEnvFrom:
        - secretRef:
            name: loki-s3-credentials
      resources:
        requests:
          cpu: 50m
          memory: 128Mi
        limits:
          memory: 256Mi
      persistence:
        enabled: true
        #| Loki chart uses 'storageClass' not 'storageClassName' #|
        storageClass: "#{ storage_class | default('local-path') }#"
        size: 10Gi

    #| Backend - compactor, ruler, index gateway #|
    backend:
      replicas: 2
      extraEnvFrom:
        - secretRef:
            name: loki-s3-credentials
      resources:
        requests:
          cpu: 50m
          memory: 128Mi
        limits:
          memory: 256Mi
      persistence:
        enabled: true
        storageClass: "#{ storage_class | default('local-path') }#"
        size: 10Gi

    #| Zero out SingleBinary replicas #|
    singleBinary:
      replicas: 0
#% else %#
    #| SingleBinary mode with filesystem (no RustFS) #|
    deploymentMode: SingleBinary
    singleBinary:
      replicas: 1
      resources:
        requests:
          cpu: 100m
          memory: 256Mi
        limits:
          memory: 512Mi
      persistence:
        enabled: true
        #| Loki chart uses 'storageClass' not 'storageClassName' #|
        storageClass: "#{ storage_class | default('local-path') }#"
        size: "#{ logs_storage_size | default('50Gi') }#"
      # Health probes for reliability
      readinessProbe:
        httpGet:
          path: /ready
          port: 3100
        initialDelaySeconds: 15
        periodSeconds: 10
        timeoutSeconds: 1
      livenessProbe:
        httpGet:
          path: /ready
          port: 3100
        initialDelaySeconds: 45
        periodSeconds: 30
        timeoutSeconds: 5
    #| Zero out other deployment modes for SingleBinary #|
    backend:
      replicas: 0
    read:
      replicas: 0
    write:
      replicas: 0
#% endif %#
    #| Zero out microservices deployment modes for clarity #|
    ingester:
      replicas: 0
    querier:
      replicas: 0
    queryFrontend:
      replicas: 0
    queryScheduler:
      replicas: 0
    distributor:
      replicas: 0
    compactor:
      replicas: 0
    indexGateway:
      replicas: 0
    bloomCompactor:
      replicas: 0
    bloomGateway:
      replicas: 0

    loki:
      auth_enabled: false
      commonConfig:
        replication_factor: 1
#% if rustfs_enabled | default(false) %#
        path_prefix: /var/loki
      storage:
        type: s3
        bucketNames:
          chunks: loki-chunks
          ruler: loki-ruler
          admin: loki-admin
        s3:
          endpoint: http://rustfs-svc.storage.svc:9000
          region: us-east-1
          #| Credentials auto-detected from AWS_ACCESS_KEY_ID / AWS_SECRET_ACCESS_KEY env vars #|
          #| Set via extraEnvFrom secretRef per-component - DO NOT specify here #|
          s3ForcePathStyle: true
          insecure: true
#% else %#
      storage:
        type: filesystem
#% endif %#
      schemaConfig:
        configs:
          #| Date must be quoted string for Loki 6.x parsing #|
          - from: "2024-01-01"
            store: tsdb
#% if rustfs_enabled | default(false) %#
            object_store: s3
#% else %#
            object_store: filesystem
#% endif %#
            schema: v13
            index:
              prefix: index_
              period: 24h
      limits_config:
        retention_period: "#{ logs_retention | default('7d') }#"
        ingestion_rate_mb: 10
        ingestion_burst_size_mb: 20
        allow_structured_metadata: true
        volume_enabled: true
      querier:
        max_concurrent: 4
      pattern_ingester:
        enabled: true

    #| S3 credentials: extraEnvFrom set per-component (read/write/backend) above #|
    #| Top-level extraEnvFrom only works for SingleBinary mode #|

    #| Disable built-in MinIO - using RustFS when enabled #|
    minio:
      enabled: false

#% if rustfs_enabled | default(false) %#
    #| Gateway required for SimpleScalable - routes push to write, queries to read #|
    gateway:
      enabled: true
      replicas: 1
      resources:
        requests:
          cpu: 10m
          memory: 32Mi
        limits:
          memory: 64Mi
#% else %#
    gateway:
      enabled: false
    #| SingleBinary mode: connect directly to loki service #|
    lokiCanary:
      enabled: true
      lokiurl: loki.monitoring.svc.cluster.local:3100
#% endif %#

    # COHESION: Disable components deployed by kube-prometheus-stack
    # Grafana is deployed by kube-prometheus-stack - DO NOT enable here
    grafana:
      enabled: false

    # Promtail is deprecated - use Alloy instead
    promtail:
      enabled: false

    # Chunk cache - disabled for small cluster
    chunksCache:
      enabled: false
    resultsCache:
      enabled: false

    # Monitoring - ServiceMonitor for Prometheus to scrape
    monitoring:
      dashboards:
        enabled: true
        namespace: monitoring
        #| Place Loki dashboards in Logging folder #|
        annotations:
          grafana_folder: Logging
      serviceMonitor:
        enabled: true
#% endif %#