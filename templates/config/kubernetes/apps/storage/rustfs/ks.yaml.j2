#% if rustfs_enabled | default(false) %#
---
apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: rustfs
spec:
  healthChecks:
    - apiVersion: helm.toolkit.fluxcd.io/v2
      kind: HelmRelease
      name: rustfs
      namespace: storage
  interval: 1h
  retryInterval: 30s
  path: ./kubernetes/apps/storage/rustfs/app
  postBuild:
    substituteFrom:
      - name: cluster-secrets
        kind: Secret
  prune: true
  sourceRef:
    kind: GitRepository
    name: flux-system
    namespace: flux-system
  targetNamespace: storage
  timeout: 15m
  wait: true
---
#| Separate Kustomization for bucket setup job - depends on RustFS being healthy #|
#| This prevents stale DNS issues when the job starts before service is ready #|
apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: rustfs-setup
spec:
  dependsOn:
    - name: rustfs
  interval: 1h
  retryInterval: 1m
  path: ./kubernetes/apps/storage/rustfs/setup
  postBuild:
    substituteFrom:
      - name: cluster-secrets
        kind: Secret
  prune: true
  sourceRef:
    kind: GitRepository
    name: flux-system
    namespace: flux-system
  targetNamespace: storage
  timeout: 10m
  wait: false
#% endif %#
