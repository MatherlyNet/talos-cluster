#% if proxmox_csi_enabled | default(false) %#
---
apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: proxmox-csi
spec:
  interval: 1h
  retryInterval: 30s
  path: ./kubernetes/apps/csi-proxmox/proxmox-csi/app
  postBuild:
    substituteFrom:
      - name: cluster-secrets
        kind: Secret
  prune: true
  sourceRef:
    kind: GitRepository
    name: flux-system
    namespace: flux-system
  targetNamespace: csi-proxmox
  wait: false
#% endif %#