#% if network_policies_enabled | default(false) and monitoring_enabled | default(false) %#
#% set enforce = network_policies_mode | default('audit') == 'enforce' %#
---
#| Prometheus network policy: Time-series database and metrics scraper #|
apiVersion: cilium.io/v2
kind: CiliumNetworkPolicy
metadata:
  name: prometheus
  namespace: monitoring
spec:
  description: "Prometheus: Scrape metrics from targets, serve queries to Grafana"
  endpointSelector:
    matchLabels:
      app.kubernetes.io/name: prometheus
  enableDefaultDeny:
    egress: #{ enforce | lower }#
    ingress: #{ enforce | lower }#
  ingress:
    #| Queries from Grafana #|
    - fromEndpoints:
        - matchLabels:
            app.kubernetes.io/name: grafana
      toPorts:
        - ports:
            - port: "9090"
              protocol: TCP
#% if tracing_enabled | default(false) %#
    #| Remote write from Tempo metrics generator #|
    - fromEndpoints:
        - matchLabels:
            app.kubernetes.io/name: tempo
      toPorts:
        - ports:
            - port: "9090"
              protocol: TCP
#% endif %#
  egress:
    #| Access kube-apiserver for service discovery #|
    - toEntities:
        - kube-apiserver
      toPorts:
        - ports:
            - port: "6443"
              protocol: TCP
    #| Scrape metrics from all pods in the cluster #|
    #| Common metrics ports across applications #|
    - toEntities:
        - cluster
      toPorts:
        - ports:
            #| Prometheus standard metrics port #|
            - port: "9090"
              protocol: TCP
            #| Node exporter #|
            - port: "9100"
              protocol: TCP
            #| CoreDNS metrics #|
            - port: "9153"
              protocol: TCP
            #| kube-state-metrics #|
            - port: "8080"
              protocol: TCP
            #| cert-manager metrics #|
            - port: "9402"
              protocol: TCP
            #| Flux controllers #|
            - port: "8080"
              protocol: TCP
            #| Envoy Gateway admin #|
            - port: "19001"
              protocol: TCP
            #| Grafana metrics #|
            - port: "3000"
              protocol: TCP
            #| Loki metrics #|
            - port: "3100"
              protocol: TCP
            #| Tempo metrics #|
            - port: "3200"
              protocol: TCP
            #| external-dns metrics #|
            - port: "7979"
              protocol: TCP
            #| AlertManager #|
            - port: "9093"
              protocol: TCP
            #| CNPG PostgreSQL metrics #|
            - port: "9187"
              protocol: TCP
    #| Scrape kubelet metrics on nodes #|
    - toEntities:
        - host
        - remote-node
      toPorts:
        - ports:
            - port: "10250"
              protocol: TCP
    #| Scrape etcd metrics on control plane nodes (Talos exposes on 2381) #|
    - toEntities:
        - host
        - remote-node
      toPorts:
        - ports:
            - port: "2381"
              protocol: TCP
    #| DNS resolution #|
    - toEndpoints:
        - matchLabels:
            io.kubernetes.pod.namespace: kube-system
            k8s-app: kube-dns
      toPorts:
        - ports:
            - port: "53"
              protocol: UDP
#% endif %#
