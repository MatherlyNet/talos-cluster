#% if dragonfly_enabled | default(false) %#
---
apiVersion: helm.toolkit.fluxcd.io/v2
kind: HelmRelease
metadata:
  name: dragonfly-operator
spec:
  chart:
    spec:
      chart: helm
      version: "#{ dragonfly_operator_version | default('1.3.1') }#"
      sourceRef:
        kind: HelmRepository
        name: dragonfly-operator
        namespace: dragonfly-operator-system
  interval: 1h
  install:
    crds: CreateReplace
    remediation:
      retries: 3
  upgrade:
    crds: CreateReplace
    cleanupOnFail: true
    remediation:
      retries: 3
  values:
    #| Operator runs in its own namespace #|
    priorityClassName: system-cluster-critical

    resources:
      requests:
        cpu: 50m
        memory: 64Mi
      limits:
        memory: 128Mi

    #| Security context #|
    podSecurityContext:
      runAsNonRoot: true
      seccompProfile:
        type: RuntimeDefault

    containerSecurityContext:
      allowPrivilegeEscalation: false
      capabilities:
        drop:
          - ALL
      readOnlyRootFilesystem: true

#% if dragonfly_control_plane_only | default(false) %#
    #| Schedule operator on control-plane nodes #|
    nodeSelector:
      node-role.kubernetes.io/control-plane: ""

    tolerations:
      - key: node-role.kubernetes.io/control-plane
        effect: NoSchedule
#% endif %#

#% if dragonfly_monitoring_enabled | default(false) %#
    #| Enable ServiceMonitor for operator metrics #|
    serviceMonitor:
      enabled: true
      interval: 30s
#% endif %#
#% endif %#
